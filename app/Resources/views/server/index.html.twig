{% extends 'base.html.twig' %}

{% block body %}
    <h1>Servers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Mdp</th>
                <th>Port</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for server in servers %}
            <tr>
                <td><a href="{{ path('*_show', { 'id': server.id }) }}">{{ server.id }}</a></td>
                <td>{{ server.login }}</td>
                <td>{{ server.mdp }}</td>
                <td>{{ server.port }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('*_show', { 'id': server.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('*_edit', { 'id': server.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('*_new') }}">Create a new server</a>
        </li>
    </ul>
{% endblock %}
